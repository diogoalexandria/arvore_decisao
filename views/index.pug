doctype html
html(lang='pt')
    head
        title Inteligencia computacional
        script(src='https://unpkg.com/axios/dist/axios.min.js')
    body
        h1 #{message}
        if final_answer
            - var btnType = 'info'
            - var btnSize = 'lg'
            button(type='button' class='btn btn-' + btnType + ' btn-' + btnSize onclick=`postFunction('${button_yes}')`) Sim
            |        
            button(type='button' class=`btn btn-${btnType} btn-${btnSize}` onclick=`postFunction('${button_no}')`) NÃ£o

        script.
            var postFunction = (name_button) => {                               
                axios.post('/answer', {
                        name: name_button                        
                    })
                    .then((res) => {                        
                        const url = res.request.responseURL
                        window.location.replace(url)
                        console.log('Ok')
                    })
                    .catch((err) => {
                        console.log(err)
                    })
            }